  <!-- Navigation -->
  <footer class="w-full px-4 py-3 bg-white/80 backdrop-blur border-t border-blue-100 flex items-center justify-between">
    <button id="prevBtn" class="btn-main text-xs md:text-sm disabled:opacity-40" onclick="changeSlide(-1)">
      â¬…ï¸ Sebelumnya
    </button>
    <div class="flex gap-1">
      <!-- nav dots will be created by JS -->
    </div>
    <button id="nextBtn" class="btn-main text-xs md:text-sm" onclick="changeSlide(1)">
      Berikutnya â¡ï¸
    </button>
  </footer>

  <script>
    const slides = document.querySelectorAll('.slide');
    const dotsContainer = document.querySelector('footer .flex.gap-1');
    let currentSlide = 0;

    // Create navigation dots
    slides.forEach((_, index) => {
      const dot = document.createElement('div');
      dot.className = 'nav-dot' + (index === 0 ? ' nav-dot-active' : '');
      dot.dataset.index = index;
      dot.addEventListener('click', () => goToSlide(index));
      dotsContainer.appendChild(dot);
    });

    function updateDots() {
      const dots = document.querySelectorAll('.nav-dot');
      dots.forEach(dot => {
        dot.classList.remove('nav-dot-active');
        if (parseInt(dot.dataset.index) === currentSlide) {
          dot.classList.add('nav-dot-active');
        }
      });
    }

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.remove('slide-active');
        if (i === index) {
          slide.classList.add('slide-active');
        }
      });
      document.getElementById('prevBtn').disabled = index === 0;
      document.getElementById('nextBtn').disabled = index === slides.length - 1;
      updateDots();
    }

    function changeSlide(step) {
      let newIndex = currentSlide + step;
      if (newIndex < 0) newIndex = 0;
      if (newIndex >= slides.length) newIndex = slides.length - 1;
      currentSlide = newIndex;
      showSlide(currentSlide);
    }

    function goToSlide(index) {
      currentSlide = index;
      showSlide(currentSlide);
    }

    // Interaktif: toggle jawaban
    function toggleAnswer(id) {
      const el = document.getElementById(id);
      if (!el) return;
      if (el.style.display === 'block') {
        el.style.display = 'none';
      } else {
        el.style.display = 'block';
      }
    }

    // Slide 3: feeling
    function showFeeling(type) {
      const msg = document.getElementById('feelingMsg');
      if (!msg) return;
      msg.style.display = 'block';
    }

    // Slide 5: highlight steps
    let lastStep = 0;
    function highlightStep(step) {
      lastStep = step;
      const stepMessage = document.getElementById('stepMessage');
      if (stepMessage) {
        if (step === 5) {
          stepMessage.textContent = 'Hebat! Kamu sudah sampai langkah 5. Semua langkah penting ya.';
        } else {
          stepMessage.textContent = 'Bagus! Sekarang lanjut ke langkah ' + (step + 1) + '.';
        }
      }
    }

    // Slide 6: pilih perasaan
    function selectFeelingCard(el) {
      const cards = el.parentElement.querySelectorAll('.pill');
      cards.forEach(card => card.classList.remove('ring-2', 'ring-sky-400'));
      el.classList.add('ring-2', 'ring-sky-400');
    }

    // Slide 7: cek jawaban Amel
    function checkAmel() {
      const feedback = document.getElementById('amelFeedback');
      const radios = document.querySelectorAll('#quizAmel input[type="radio"]');
      let selected = null;
      let correct = false;
      radios.forEach(r => {
        if (r.checked) {
          selected = r;
          if (r.dataset.correct === 'true') correct = true;
        }
      });
      if (!selected) {
        feedback.textContent = 'Pilih dulu salah satu jawaban ya ğŸ˜Š';
        feedback.style.color = '#f97316';
        return;
      }
      if (correct) {
        feedback.textContent = 'Benar! Amel meminta izin guru untuk menelpon ibunya. ğŸ‘';
        feedback.style.color = '#16a34a';
      } else {
        feedback.textContent = 'Belum tepat. Coba pikir lagi, mana solusi yang paling aman dan sopan?';
        feedback.style.color = '#b91c1c';
      }
    }

    // Slide 8: select benefit
    function showBenefitText(value) {
      const feedback = document.getElementById('benefitFeedback');
      if (!feedback) return;
      feedback.style.display = 'block';
      if (value === 'otak') {
        feedback.textContent = 'Saat kamu berpikir mencari solusi, otakmu jadi makin kuat dan terlatih! ğŸ§ ';
      } else if (value === 'mandiri') {
        feedback.textContent = 'Kamu belajar mengurus masalahmu sendiri. Itu tanda kamu makin mandiri. ğŸ’ª';
      } else if (value === 'kerjasama') {
        feedback.textContent = 'Kamu belajar mendengar teman dan mencari solusi bersama. ğŸ¤';
      } else {
        feedback.style.display = 'none';
      }
    }

    const benefitSelect = document.getElementById('benefitSelect');
    if (benefitSelect) {
      benefitSelect.addEventListener('change', (e) => showBenefitText(e.target.value));
    }

    // Slide 10: refleksi
    function showRefleksi() {
      const msg = document.getElementById('refleksiMsg');
      if (!msg) return;
      msg.style.display = 'block';
    }

    // Slide 11: mini quiz
    function checkMiniQuiz() {
      const questions = ['q1', 'q2', 'q3'];
      let score = 0;
      questions.forEach(name => {
        const radios = document.querySelectorAll('input[name="' + name + '"]');
        radios.forEach(r => {
          if (r.checked && r.value === 'benar') {
            score += 1;
          }
        });
      });
      const msg = document.getElementById('miniQuizScore');
      msg.textContent = 'Skor kamu: ' + score + ' dari 3. ' +
        (score === 3 ? 'Keren! Kamu sudah paham sekali. ğŸŒŸ'
                     : 'Tidak apa-apa, nanti kita bisa latihan lagi. ğŸ™‚');
    }
  </script>
</body>
</html>
